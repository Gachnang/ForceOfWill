<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		app:layout_constraintDimensionRatio="1"
		app:layout_constraintCircleRadius="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:padding="16dp"
		android:background="@color/colorPrimary"
		android:animateLayoutChanges="false">

		<ProgressBar
			android:id="@+id/dialogProgressBar"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			style="?android:progressBarStyle"
			android:progressDrawable="@drawable/ic_progress_circle"
			app:layout_constraintDimensionRatio="1"
			android:max="100"
			android:progress="26"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/dialogLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/dialogProgressBar"
			android:layout_alignStart="@+id/dialogProgressBar"
			android:layout_alignEnd="@+id/dialogProgressBar"
			android:layout_marginTop="8dp"
			android:gravity="center"
			android:hint="Lade..."
			app:layout_constraintEnd_toEndOf="@+id/dialogProgressBar"
			app:layout_constraintStart_toStartOf="@+id/dialogProgressBar"
			app:layout_constraintTop_toBottomOf="@+id/dialogProgressBar" />

		<Button
			style="@style/Button"
			android:id="@+id/dialogCancel"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_below="@+id/dialogLabel"
			android:layout_alignStart="@+id/dialogLabel"
			android:layout_alignEnd="@+id/dialogLabel"
			android:layout_marginTop="8dp"
			android:gravity="center"
			android:text="Abbrechen"
			android:visibility="gone"
			app:layout_constraintEnd_toEndOf="@+id/dialogProgressBar"
			app:layout_constraintStart_toStartOf="@+id/dialogProgressBar"
			app:layout_constraintTop_toBottomOf="@+id/dialogLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>